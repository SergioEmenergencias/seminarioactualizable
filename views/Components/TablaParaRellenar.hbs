<head>
    <link href="../css/agregarCultivo.css" rel="stylesheet"> <!-- Asumiendo que los estilos estÃ¡n en este archivo -->
</head>

<div class="container my-8">
   

    <div class="table-responsive shadow p-4 rounded bg-light" style="max-width: 1200px; margin: auto;">
         <h2 class="text-center mb-4">{{titulo}}</h2> <!-- Estilo del contenedor de la tabla -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>No.</th> <!-- Columna correlativa -->
                    {{#each columnNames}}
                        <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                    <tr>
                        <td>{{add @index 1}}</td> <!-- Columna No. con correlativo comenzando en 1 -->
                        {{#each ../columnNames}}
                            <td>{{lookup ../this this}}</td>
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
